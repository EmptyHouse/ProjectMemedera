//These are referenced when the physics engine is run

//If this is off no vertical calculations will be made to the character
gravity_on = true;

//The velocity that will be applied to the character for their movement
vel_x = 0;
vel_y = 0;

//Gravity scale is useful for change how fast or slow a character will move vertically in the air
gravity_scale = 1;

//Lock the velocith of the x_axis or y_axis
lock_x = false;
lock_y = false;

use_physics = true;
